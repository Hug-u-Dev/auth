// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                  String                @id  
  login               String                @unique
  userName            String                @unique
  email               String                @unique
  password            String

  @@index([login, userName])
}

model Token {
  token      String   @id 
  userId     String
  expiresAt  DateTime
}
